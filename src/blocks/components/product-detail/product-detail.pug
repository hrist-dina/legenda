
mixin product-detail
    include ../slider-product/slider-product
    include ../product-composition/product-composition
    include ../ui-kit/ui-kit
    include ../share/share
    section.product-detail
        +container
            .__inner(itemscope itemtype="http://schema.org/Product")
                article.__slider
                    +product-composition(
                        ['Йод', 'Фтор', 'Селен']
                    ).product-composition--detail.__composition
                    +slider-product
                article.__content
                    .__data.js-vue-product
                        h1.h1.__title(itemprop="name")=h1
                        .__offer(itemprop="offers" itemscope itemtype="http://schema.org/Offer")
                            .__price(itemprop="price") !{ruble(190)}
                            .__currency.hide(itemprop="priceCurrency") RUB
                        .__actions
                            quantity-counter(@change-quantity='onChangeQuantity' :quantity="cnt" :is-detail="true").__quantity
                            +button('in-cart', 'button')(
                                :class='classInCart'
                                @click='addToCart'
                                :disabled='isDisabled'
                                data-id="1"
                                data-in-cart-text='В корзине'
                                ref='product-button'
                            ).__button
                                +icon('product-cart')
                                span(ref='product-button-text') В корзину
                            .__favorite
                                +icon('favorite').__favorite-icon(
                                    @click.prevent="toggleToFavorite"
                                    :class="classInFavorite"
                                )
                        .__tabs(itemprop="description")
                            .__tabs-nav
                                .__tabs-nav-item(data-tab='benefit')
                                    span Польза
                                .__tabs-nav-item.active(data-tab='composition')
                                    span Состав
                                .__tabs-nav-item(data-tab='how-to-order')
                                    span Как заказать
                            .__tabs-content
                                .__tabs-content-item(data-tab='benefit')
                                .__tabs-content-item.active(data-tab='composition')
                                    .__tabs-content-list
                                        ul
                                            li 40-60 мкг/л – йода
                                            li 0,8-1,2 мг/л – фтора
                                            li 5-10 мкг/л – селена
                                            li 19 л – природной артезианской воды высшей категории качества
                                .__tabs-content-item(data-tab='how-to-order')
                    .__share
                        +share
