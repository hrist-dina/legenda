include stocks-data

mixin stocks
    include ../menu-nav/menu-nav
    section.stocks
        +container
            .__nav
                +menu-nav([
                    {name: 'Все', active: true},
                    {name: 'Новым клиентам'},
                    {name: 'Постоянным клиентам'}]
                )
            .__list
                for item in stocks
                    +stocks-item(item)

mixin stocks-item(item)
    a(href="#").stocks__item
        .stocks__img(style=`background-image:url(${item.img})`)
        .stocks__information
            if item.date
                span.stocks__date=item.date
            else
                .stocks__pin
                    +icon('pin-round')
            .stocks__title=item.title


mixin stocks-section
    +section('Акции').stocks-section
        .stocks__list
            for item in stocksSimple
                +stocks-item-simple(item)

mixin stocks-item-simple(item)
    a(href="#").stocks__item.stocks__item--simple
        .stocks__img(style=`background-image:url(${item.img})`)