include ../../blocks/modules/footer/footer
block variables
    include ../helpers/variables

doctype html
html(lang="ru")
    include ../helpers/head

    body
        .wrapper
            .main-content
                block header
                    +header
                main
                    if isInnerPage
                        +inner-page
